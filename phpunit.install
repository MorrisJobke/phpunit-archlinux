post_install() {
  cat <<EOT
You should add /usr/share/webapps/bin to the external libraries of your IDE!
EOT
}

post_upgrade() {
  cat <<EOT
Note: You may remove /usr/share/php from open_basedir, as the package is now
in /usr/share/webapps/bin. You should also change it in your IDE.
EOT
}

